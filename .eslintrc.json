{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["prettier"],
  "extends": [
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "semi": ["error", "never"],
        "no-prototype-builtins": "off",
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "auto"
          }
        ]
      }
    }
  ],
  "parserOptions": {
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-import-assertions"
      ]
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
